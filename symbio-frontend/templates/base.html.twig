<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{'project_name'|trans}}{% endblock %}</title>
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap-icons.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_login') }}">
                <i class="bi bi-briefcase"></i> {{'project_name'|trans}}
            </a>
            {% if app.session.has('jwt') %}
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="{{ path('app_dashboard') }}">
                    <i class="bi bi-house"></i> {{'dashboard.heading'|trans}}
                </a>
                <a class="nav-link" href="{{ path('tasks') }}">
                    <i class="bi bi-list-task"></i> {{'tasks.title'|trans}}
                </a>
                <a class="nav-link" href="{{ path('disputes') }}">
                    <i class="bi bi-exclamation-triangle"></i> {{'disputes'|trans}}
                </a>
                <a class="nav-link" href="{{ path('app_profile') }}">
                    <i class="bi bi-person"></i> {{'dashboard.link.profile'|trans}}
                </a>
                <a class="nav-link" href="{{ path('app_exit') }}">
                    <i class="bi bi-box-arrow-right"></i> {{'exit'|trans}}
                </a>
            </div>
            {% endif %}
        </div>
    </nav>

    <main>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% block body %}{% endblock %}
    </main>

    <footer class="bg-dark text-light text-center py-3 mt-5">
        <p class="mb-0">Â© {{ "now"|date("Y") }} {{'project_name'|trans}}</p>
    </footer>

    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>
