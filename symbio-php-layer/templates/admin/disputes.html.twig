{% extends 'base.html.twig' %}

{% block title %}Управление диспутами - mFrelance Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="bi bi-gear"></i> Управление диспутами</h2>

            <!-- Search/Filter Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="search_id" class="form-label">ID диспута</label>
                            <input type="number" class="form-control" id="search_id" name="id"
                                   value="{{ app.request.get('id') }}" placeholder="Введите ID">
                        </div>
                        <div class="col-md-4">
                            <label for="search_task_id" class="form-label">ID задачи</label>
                            <input type="number" class="form-control" id="search_task_id" name="task_id"
                                   value="{{ app.request.get('task_id') }}" placeholder="Введите ID задачи">
                        </div>
                        <div class="col-md-4">
                            <label for="search_status" class="form-label">Статус</label>
                            <select class="form-select" id="search_status" name="status">
                                <option value="">Все статусы</option>
                                <option value="open" {{ app.request.get('status') == 'open' ? 'selected' : '' }}>Открыт</option>
                                <option value="resolved" {{ app.request.get('status') == 'resolved' ? 'selected' : '' }}>Разрешён</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Поиск
                            </button>
                            <a href="{{ path('admin_disputes') }}" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-x-circle"></i> Сброс
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            {% if disputes is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                    <h4 class="text-muted mt-3">Нет открытых диспутов</h4>
                    <p class="text-muted">Все диспуты разрешены</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Задача</th>
                                <th>Открыл</th>
                                <th>Назначен</th>
                                <th>Статус</th>
                                <th>Создан</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for dispute in disputes %}
                                <tr>
                                    <td>{{ dispute.id }}</td>
                                    <td>
                                        <a href="{{ path('task_show', {'id': dispute.task_id}) }}" 
                                           target="_blank" class="text-decoration-none">
                                            Задача #{{ dispute.task_id }}
                                        </a>
                                    </td>
                                    <td>Пользователь #{{ dispute.opened_by }}</td>
                                    <td>
                                        {% if dispute.assigned_admin %}
                                            Админ #{{ dispute.assigned_admin }}
                                        {% else %}
                                            <span class="text-muted">Не назначен</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ dispute.status == 'open' ? 'warning' : 'success' }}">
                                            {{ dispute.status }}
                                        </span>
                                    </td>
                                    <td>{{ dispute.created_at|date('d.m.Y H:i') }}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('admin_dispute_show', {'id': dispute.id}) }}" 
                                               class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i> Просмотр
                                            </a>
                                            {% if not dispute.assigned_admin %}
                                                <form method="POST" action="{{ path('admin_dispute_show', {'id': dispute.id}) }}" 
                                                      style="display: inline;">
                                                    <input type="hidden" name="action" value="assign">
                                                    <button type="submit" class="btn btn-outline-success">
                                                        <i class="bi bi-person-plus"></i> Назначить
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
