{% extends 'base.html.twig' %}

{% block title %}Отзывы пользователя #{{ userId }} - mFrelance{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="bi bi-star"></i> Отзывы пользователя #{{ userId }}</h2>
            
            {% if reviews is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-star fs-1 text-muted"></i>
                    <h4 class="text-muted mt-3">Нет отзывов</h4>
                    <p class="text-muted">У этого пользователя пока нет отзывов</p>
                </div>
            {% else %}
                <div class="row">
                    {% for review in reviews %}
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="card-title">Отзыв #{{ review.id }}</h6>
                                        <div class="text-warning">
                                            {% for i in 1..5 %}
                                                <i class="bi bi-star{{ i <= review.rating ? '-fill' : '' }}"></i>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    
                                    {% if review.comment %}
                                        <p class="card-text">{{ review.comment }}</p>
                                    {% endif %}
                                    
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i> 
                                                {{ review.created_at|date('d.m.Y') }}
                                            </small>
                                        </div>
                                        <div class="col-6 text-end">
                                            <small class="text-muted">
                                                <i class="bi bi-list-task"></i> 
                                                Задача #{{ review.task_id }}
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
