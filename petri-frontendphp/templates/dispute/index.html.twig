{% extends 'base.html.twig' %}

{% block title %}Мои диспуты - mFrelance{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="bi bi-exclamation-triangle"></i> Мои диспуты</h2>
            
            {% if disputes is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-check-circle fs-1 text-success"></i>
                    <h4 class="text-muted mt-3">У вас нет диспутов</h4>
                    <p class="text-muted">Это хорошо! Диспуты возникают при спорах по задачам</p>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Задача</th>
                                <th>Статус</th>
                                <th>Создан</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for dispute in disputes %}
                                <tr>
                                    <td>{{ dispute.id }}</td>
                                    <td>
                                        <a href="{{ path('task_show', {'id': dispute.task_id}) }}" 
                                           class="text-decoration-none">
                                            Задача #{{ dispute.task_id }}
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ dispute.status == 'open' ? 'warning' : 'success' }}">
                                            {{ dispute.status }}
                                        </span>
                                    </td>
                                    <td>{{ dispute.created_at|date('d.m.Y H:i') }}</td>
                                    <td>
                                        <a href="{{ path('dispute_show', {'id': dispute.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Просмотр
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
